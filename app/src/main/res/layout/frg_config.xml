<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil.ConfigFragment">

    <LinearLayout
        android:id="@+id/frg_config_title_lin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/frg_config_back_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@null"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/frg_config_title"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="60"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/config"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_config_main_lin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toTopOf="@+id/frg_config_menu_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_config_title_lin">

        <LinearLayout
            android:id="@+id/config_main_lin_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/frg_config_cuenta_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/cuenta"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_usuario" />

            <Button
                android:id="@+id/frg_config_nombre_btn"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:padding="8dp"
                android:text="@string/nombre_usuario"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/frg_config_pass_btn"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:padding="8dp"
                android:text="@string/pass"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/frg_config_email_btn"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:padding="8dp"
                android:text="@string/email"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/frg_config_privacidad_btn"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:padding="8dp"
                android:text="@string/privacidad"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/frg_config_foto_btn"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:padding="8dp"
                android:text="@string/foto_perfil"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:text="@string/cerrar_sesion"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/config_main_lin_notif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/frg_config_notif_txt"
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="@string/notificaciones"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_notificacion" />

            <ImageButton
                android:id="@+id/frg_config_notif_on_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@null"
                android:cropToPadding="false"
                android:src="@drawable/ic_phone_1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_config_menu_lin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_casa_silueta_negra_sin_puerta" />

        <ImageButton
            android:id="@+id/menu_buscar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:layout_marginTop="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_buscar" />


        <ImageButton
            android:id="@+id/menu_notif_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="56dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_notificacion2" />

        <ImageButton
            android:id="@+id/menu_usuario_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="42dp"
            android:layout_weight="10"

            android:background="@null"
            android:src="@drawable/ic_usuario_de_perfil" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/frg_config_menu_lin"
        tools:layout_editor_absoluteX="1dp">

        <ImageButton
            android:id="@+id/menu_mas_btn"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_gravity="clip_horizontal"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mas1"
            android:stateListAnimator="@null"
            tools:visibility="visible" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


