<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">

    <LinearLayout
        android:id="@+id/frg_config_title_lin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/frg_config_back_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@null"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/frg_config_title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="90"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/config"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_config_main_lin"
        android:layout_width="387dp"
        android:layout_height="450dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="49dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toTopOf="@+id/frg_config_menu_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_config_title_lin">

        <LinearLayout
            android:id="@+id/config_main_lin_cuenta"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_weight="80"
            android:orientation="vertical"
            android:weightSum="50">

            <TextView
                android:id="@+id/txt_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/cuenta"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_usuario" />

            <Button
                android:id="@+id/btn_nombre"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="16dp"
                android:text="@string/nombre_usuario"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_pass"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="16dp"
                android:text="@string/pass"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_email"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="16dp"
                android:text="@string/email"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_privacidad"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="16dp"
                android:text="@string/privacidad"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_foto"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="16dp"
                android:text="@string/foto_perfil"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/config_main_lin_notif"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="20"
            android:weightSum="100">

            <ImageView
                android:id="@+id/img_notif"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_notificacion" />

            <TextView
                android:id="@+id/txt_notif"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/notificaciones"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@null"
                android:src="@drawable/ic_phone_1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_config_menu_lin"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_casa_silueta_negra_sin_puerta" />

        <ImageButton
            android:id="@+id/btn_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_buscar" />

        <ImageButton
            android:id="@+id/btn_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ic_mas1"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_notificacion2" />

        <ImageButton
            android:id="@+id/btn_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="42dp"
            android:layout_weight="10"

            android:background="@null"
            android:src="@drawable/ic_usuario_de_perfil" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>