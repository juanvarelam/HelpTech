<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.MainActivity">

    <LinearLayout
        android:id="@+id/frg_explora_menu_lin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/frg_explora_menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_casa_silueta_negra_sin_puerta" />

        <ImageButton
            android:id="@+id/frg_explora_menu_buscar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="56dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_buscar" />


        <ImageButton
            android:id="@+id/frg_explora_menu_notif_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_notificacion2" />

        <ImageButton
            android:id="@+id/frg_explora_menu_usuario_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="42dp"
            android:layout_weight="10"

            android:background="@null"
            android:src="@drawable/ic_usuario_de_perfil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_explora_menu_lin_mas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/frg_explora_menu_lin"
        tools:layout_editor_absoluteX="1dp">

        <ImageButton
            android:id="@+id/frg_explora_mas_btn"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_gravity="clip_horizontal"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mas1"
            android:stateListAnimator="@null"
            tools:visibility="visible" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>