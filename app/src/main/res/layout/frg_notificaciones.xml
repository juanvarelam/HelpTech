<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".perfil.ConfigActivity">

    <LinearLayout
        android:id="@+id/frg_config_title_lin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/frg_notificacion_btn_back"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@null"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/frg_notificacion_title"
            style="@style/tipografiaTitulo2"
            android:layout_width="238dp"
            android:layout_height="64dp"
            android:layout_weight="60"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            tools:text="@string/Notificaciones" />

        <ImageButton
            android:id="@+id/frg_notificacion_btn_user"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="TODO"
            android:src="@drawable/ic_usuario_de_perfil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificacion_main_lin_notif"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frg_config_title_lin"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/frg_notificacion_btn_Visituser"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@null"
            app:srcCompat="@drawable/ic_usuario_de_perfil"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/frg_notificacion_notif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:text="@string/txtNotificacion"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="#191818"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/notificacion_main_lin_notif"
        app:layout_constraintStart_toStartOf="@id/notificacion_main_lin_notif"
        app:layout_constraintTop_toBottomOf="@+id/notificacion_main_lin_notif" />

</androidx.constraintlayout.widget.ConstraintLayout>