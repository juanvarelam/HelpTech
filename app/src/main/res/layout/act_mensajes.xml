<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensajesActivity">

    <LinearLayout
        android:id="@+id/act_mensajes_title_lin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/mensajes_back_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@null"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/mensajes_title_txt"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center"
            android:text="@string/mensajes"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/mensajes_nuevo_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@null"
            app:srcCompat="@drawable/ic_nuevo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_mensajes_recientes_lin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/act_mensajes_nuevos_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_mensajes_title_lin">

        <TextView
            android:id="@+id/mensajes_recientes_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recientes"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mensajes_recientes_txt_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/recientes_txt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/user"
                android:textAlignment="center"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/programador" />

            <TextView
                android:id="@+id/recientes_txt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/user"
                android:textAlignment="center"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/programador" />

            <TextView
                android:id="@+id/recientes_txt3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/user"
                android:textAlignment="center"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/programador" />

            <TextView
                android:id="@+id/recientes_txt4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/user"
                android:textAlignment="center"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/programador" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_mensajes_separador_lin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/act_mensajes_nuevos_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_mensajes_recientes_lin"></LinearLayout>

    <LinearLayout
        android:id="@+id/act_mensajes_nuevos_lin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/act_mensajes_menu_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_mensajes_recientes_lin">

        <LinearLayout
            android:id="@+id/mensajes_nuevos_lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mensajes_user_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mensajes_hora_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/ejemplo_hora"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/mensajes_ejemplo1_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mensaje_user_img"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/programador__1_" />

                <TextView
                    android:id="@+id/mensaje_ejemplo1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:text="@string/ejemplo_txt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mensajes_nuevos_lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mensajes_user2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mensajes_hora2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/ejemplo_hora"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/mensajes_ejemplo2_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mensaje_user2_img"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/programador__1_" />

                <TextView
                    android:id="@+id/mensaje_ejemplo2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:text="@string/ejemplo_txt"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_mensajes_menu_lin"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="20"
            android:background="@null"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_casa_silueta_negra_sin_puerta" />

        <ImageButton
            android:id="@+id/menu_buscar_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="20"
            android:background="@null"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_buscar" />

        <ImageButton
            android:id="@+id/menu_mas_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="20"
            android:background="@null"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_mas1" />

        <ImageButton
            android:id="@+id/menu_notif_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="20"
            android:background="@null"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_notificacion2" />

        <ImageButton
            android:id="@+id/menu_usuario_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="20"
            android:background="@null"
            app:srcCompat="@drawable/ic_usuario_de_perfil"
            android:padding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>