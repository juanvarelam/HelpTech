<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notificacion_main_lin_notif"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frg_config_title_lin"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/frg_notificacion_btn_Visituser"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@null"
            app:srcCompat="@drawable/ic_usuario_de_perfil"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/frg_notificacion_notif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:text="@string/txtNotificacion"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>