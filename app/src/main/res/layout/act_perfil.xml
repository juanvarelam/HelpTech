<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil.PerfilActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/supbar"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/nombre_perfil"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:contentDescription="@string/act_perfi_btn_ajustes"
                app:srcCompat="@drawable/ic_ajustes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical"
                android:paddingHorizontal="3dp"
                android:paddingBottom="10dp"
                android:weightSum="70">

                <TextView
                    android:id="@+id/nombre_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_datos_perfil"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/act_perfil_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/descripcion_perfil"
                    android:textAlignment="textStart"
                    android:textColor="@color/black2"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_perfil_imagen_usuario"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="vertical"
                android:weightSum="30" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/frg_main_menu_lin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/supbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/frg_main_menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_casa_silueta_negra_sin_puerta" />

        <ImageButton
            android:id="@+id/frg_main_menu_buscar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="56dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_buscar" />


        <ImageButton
            android:id="@+id/frg_main_menu_notif_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_notificacion2" />

        <ImageButton
            android:id="@+id/frg_main_menu_perfil_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="42dp"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/ic_usuario_de_perfil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frg_explora_menu_lin_mas"
        android:layout_width="113dp"
        android:layout_height="123dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/frg_main_menu_lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_main_container">

        <ImageButton
            android:id="@+id/frg_main_menu_crea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mas1"
            android:stateListAnimator="@null"
            android:visibility="visible"
            tools:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frg_main_menu_lin"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-16dp">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/act_perfil_tabLayout"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/act_perfil_tabPreguntas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/act_perfil_tabRespuestas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Respuestas" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/act_perfil_tabFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:icon="@drawable/ic_action_favorite" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/act_perfil_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>