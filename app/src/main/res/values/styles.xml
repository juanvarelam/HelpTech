<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BotonAction" parent="android:Widget.Material.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/drawable_btn_shadow</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>

    </style>

    <style name="btnsPerfil">btnsPerfil
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/transparente</item>
        <item name="background">@color/transparente</item>
        <item name="backgroundTintMode">add</item>
        <item name="android:paddingHorizontal">0dp</item>
    </style>

    <style name="tipografiaGuiño" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tipografiaTituloPestañaActiva" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="tipografiaHora" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/azulito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tipografiaTituloInfo">
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TipografiaBotones">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="frg_login_btn_olvidar">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>