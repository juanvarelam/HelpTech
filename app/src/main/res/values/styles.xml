<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BotonAction" parent="android:Widget.Material.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/drawable_btn_shadow</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>

    </style>

    <style name="title" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="fontFamily">heebo</item>
        <item name="android:textSize">33dp</item>
    </style>

    <style name="appName" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="fontFamily">@font/kaushanscript_regular</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="btnsPerfil">btnsPerfil
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/transparente</item>
        <item name="background">@color/transparente</item>
        <item name="backgroundTintMode">add</item>
        <item name="android:paddingHorizontal">0dp</item>
    </style>


</resources>